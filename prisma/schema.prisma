model tbm_admin {
  uid String @unique
}

model tbm_tag_group {
  id                  String                @id @default(uuid())
  name                String                @unique
  data                String
  created_at          DateTime              @default(now())
  updated_at          DateTime              @default(now())
  is_deleted          Boolean               @default(false)
  created_by          String
  tbl_document_detail tbl_document_detail[]
}

model tbl_document {
  id                  String                @id @default(uuid())
  type                String
  filepath            String
  name                String
  remarks             String
  data_mahasiswa      String                @default("")
  data_pegawai        String                @default("")
  created_at          DateTime              @default(now())
  updated_at          DateTime              @default(now())
  is_deleted          Boolean               @default(false)
  created_by          String
  tbl_document_detail tbl_document_detail[]
}

model tbl_document_detail {
  id           String         @id @default(uuid())
  id_document  String
  id_tag_group String?        @default("")
  document     tbl_document   @relation(fields: [id_document], references: [id])
  tag_group    tbm_tag_group? @relation(fields: [id_tag_group], references: [id])
}
